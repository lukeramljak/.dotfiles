#!/usr/bin/env zsh

pushd $DOTFILES

os_name="$(uname -s)"
linux_folders="foot hypr sway tofi"

for folder in */; do
  if [[ "$os_name" == "Linux" && "$folder" == "mac/" ]]; then
    continue
  fi

  if [[ "$os_name" == "Darwin" && $linux_folders =~ (^| )"${folder%/}"($| ) ]]; then
    continue
    
  echo "stow $folder"
  stow --restow "${folder%/}"
done
popd
